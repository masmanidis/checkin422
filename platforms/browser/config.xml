<?xml version='1.0' encoding='utf-8'?>
<widget id="checkin.certusonline.com" version="1.0.13" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CHECKIN APP</name>
    <description>
        CERTUS ONLINE Handheld Check-in Application
    </description>
    <author email="dmas@certusonline.com" href="http://www.certusonline.com">
        D.Masmanidis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="4000" />
</widget>
